{
  "manifest_version": 2,
  
  "name": "chrome-bus",
  "version": "0.0.1",
  
  "app": {
    "background": {
      "scripts": [
        "background.js"
      ]
    }
  },
  "permissions": [
    "unlimitedStorage"
  ],
  "sockets": {
    "tcp": {
      "connect": ["*:80"]
    },
    "tcpServer" : {
      "listen": [":1337"]
    }
  }
}
